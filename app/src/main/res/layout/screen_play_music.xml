<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorScreen_Play">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
                >
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Tên bài hát"
                    android:id="@+id/screen_play_name"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:id="@+id/screen_play_artist"
                    android:textStyle="bold"
                    android:text="Unknown"
                    android:textColor="@color/footer_border"
                    android:gravity="center_vertical"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_timer"
                    android:padding="8dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_overflow"
                    android:padding="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                app:tabSelectedTextColor="@color/colorYahoo"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:tabBackground="@drawable/dot_selector"
                app:tabGravity="center"
                android:layout_weight="0.5"
                app:tabIndicatorHeight="0dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/screen_play_timecurrent"
                    android:layout_width="0dp"
                    android:text="00:00"
                    android:textColor="@color/colorWhite"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.5"/>
                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/screen_play_seekbar"
                    android:paddingTop="3dp"
                    android:layout_weight="2.5"
                    />
                <TextView
                    android:id="@+id/screen_play_timeduration"
                    android:layout_width="0dp"
                    android:text="04:00"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/screen_play_shuffle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_player_shuffle"
                    android:padding="25dp"/>
                <ImageView
                    android:id="@+id/screen_play_prev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_player_prev"
                    android:padding="24dp"/>
                <ImageView
                    android:id="@+id/screen_play_play"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_player_play"
                    android:padding="18dp"/>
                <ImageView
                    android:id="@+id/screen_play_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_player_next"
                    android:padding="24dp"/>
                <ImageView
                    android:id="@+id/screen_play_repeat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_player_repeat"
                    android:padding="25dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>